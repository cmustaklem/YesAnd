{% extends 'layoutmainscreen' %}


{% block content %}

<main>
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 text-left">
                <form class="shadow" id="directorPlayerEdit">
                    <div class="form-group text-left" id="userFirstName">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" value="{user.first_name}">
                    </div>
                    <div class="form-group text-left" id="userLastName">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" value="{user.first_name}">
                    </div>
                    <div class="form-group text-left" id="userPhoneNumber">
                        <label for="phoneNumberLogin">Phone Number</label>
                        <input type="text" class="form-control" id="phoneNumberLogin" value="{user.first_name}">
                    </div>
                    <div class="form-group text-left" id="userEmailAddress">
                        <label for="emailAddressLogin">Email address/Username</label>
                        <input type="email" class="form-control" id="emailAddressLogin" value="{user.first_name}">
                    </div>
                    <div class="form-group text-left" id="userPassword">
                        <label for="passwordLogin">Password</label>
                        <input type="text" class="form-control" id="passwordLogin" value="{user.password}">
                    </div>
                    <div class="checkbox" id="directorCheckBox">
                        <label>
                            <input type="checkbox"> Check to make the User a Director
                        </label>
                    </div>
                    <button type="button" class="btn btn-default" id="editUserButton">Submit</button>
                </form>
            </div>
        </div>
    </div>
</main>
<script type="text/javascript" src="/js/playerEditView.js"></script>
{% endblock %}
