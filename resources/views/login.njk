{% extends 'layout' %}

{% block content %}
    {# {% include 'nav' %} #}
    <div class="container-fluid">
    <div class="row-fluid">
      <div class="col-sm3"></div>
      <div class="span3 centering text-center col-sm-6">
        <form class="shadow" id="login">
          <div class="form-group text-left">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="emailAddressLogin" placeholder="Email">
          </div>
          <div class="form-group text-left">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="passwordLogin" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-default" id="loginButton">Submit</button>
        </form>
        <br>
        <button type="button" class="btn btn-link" id="signUpButton"><a href="#">Click here to sign up</a></button>
      </div>

      <div class="col-sm3"></div>
    </div>
  </div>
    <script type="text/javascript" src="/js/login.bundle.js"></script>
{% endblock %}
