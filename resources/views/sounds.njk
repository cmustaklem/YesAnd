{% extends 'layoutmaindirectorscreen' %}


{% block content %}

{{ form.open({action: 'SoundController.store'})}}

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <select class="form-control" id="soundEffectGameList">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select><br>
                <div class="form-group">
                    <label for="exampleInputFile">Upload Sound Effect</label>
                    <input type="file" id="exampleInputFile">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div><br><br>
        <div class="row">
            <div class="col-md-8 col-md-offset-2" id="soundEffectList">
                <ul class="list-unstyled">
                  <li>...</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center" id="soundEffectListing">
                <strong>Soundfile name</strong>
                <p>GameID</p>
                <audio controls>
                  <source src="/assets/Slap.mp3" type="audio/mpeg">
                </audio>
            </div>
        </div>
    </div>
</main>
<script type="text/javascript" src="/js/newSound.js"></script>
{% endblock %}
