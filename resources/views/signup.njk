{% extends 'layout' %}

{% block content %}
{# {% include 'nav' %} #}
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 span3 centering text-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Welcome to YesAnd...</h4>
                    <h5>By signing up, you are automatically registering as your team's admin. Please <u>click here</u> to view information about our user permissions!</h5>
                </div>
            </div>
            <form class="shadow" id="signUp">
                <div class="form-group text-left">
                    <label for="teamName">Team Name</label>
                    <input type="text" class="form-control" id="teamName" placeholder="Team Name">
                </div>
                <div class="form-group text-left">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" id="firstName" placeholder="Andy">
                </div>
                <div class="form-group text-left">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" id="lastName" placeholder="Kaufman">
                </div>
                <div class="form-group text-left">
                    <label for="emailAddressLogin">Email address</label>
                    <input type="email" class="form-control" id="emailAddressLogin" placeholder="funny.person@fakemail.com">
                </div>
                <div class="form-group text-left">
                    <label for="passwordLogin">Password</label>
                    <input type="password" class="form-control" id="passwordLogin" placeholder="Password">
                </div>
                <div class="form-group text-left">
                    <label for="profilePic">Upload your Photo</label>
                    <input type="file" id="profilePic">
                </div>
                <div class="form-group text-left">
                    <label for="teamLogo">Upload your Team's Logo</label>
                    <input type="file" id="teamLogo">
                </div>
                <button type="submit" class="btn btn-default" id="signUpButton">Submit</button>
            </form>
        </div>

    </div>
</div>
<script type="text/javascript" src="/js/login.bundle.js"></script>
{% endblock %}
