{% extends 'layoutmaindirectorscreen' %}


{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3">
            <select class="form-control" id="gameDropDownMenu" name="gameDropDownMenu">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="col-sm-9" id="newGameForm">
