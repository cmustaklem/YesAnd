{% extends 'layoutmaindirectorscreen' %}


{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Create a New Show</h4>
                </div>
            </div>
            <div class="input-group shadow" id="signUp">
                <div class="form-group text-left col-sm-3">
                    <label for="teamName">Date</label>
                    <input type="date" class="form-control" id="teamName" placeholder="Team Name">
                    <button class="btn-info btn">Click Here to Add Game</button>
                </div>
                <div class="form-group text-left col-sm-9">
                    <label for="firstName">Location</label>
                    <input type="text" class="form-control" id="firstName" placeholder="Andy">
                </div>
            </div>
        </div>
    </div>
</div>
</main>
<script type="text/javascript" src="/js/login.bundle.js"></script>
{% endblock %}
